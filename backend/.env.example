# This is an example .env file.
# In your local development, create a real ".env" file and fill these in with your secret keys.

# Server Port
PORT=5001

# Database
DATABASE_URL="postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST:YOUR_PORT/YOUR_DATABASE"

# Authentication
JWT_SECRET="YOUR_JWT_SECRET_KEY"
JWT_EXPIRES_IN="1h"
JWT_COOKIE_EXPIRES_IN_MS="3600000"
BCRYPT_SALT_ROUNDS="10"
VERIFICATION_TOKEN_EXPIRES_IN_MS="3600000"

# Email Service (for Ethereal development)
ETHEREAL_USER="your-ethereal-user@ethereal.email"
ETHEREAL_PASS="your-ethereal-password"

# --- Email Service (for Production) ---
# These are needed for the live, deployed application.
# EMAIL_USER="your-production-email@example.com"
# EMAIL_PASS="your-16-digit-app-password"

# URLs
# For local development, these point to the frontend dev server.
# For production, they should point to your live frontend URL (e.g., "https://your-app.onrender.com").
CORS_ORIGIN="http://localhost:5173"
FRONTEND_URL="http://localhost:5173"